<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.restoranproje.gui.ChefController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Text styleClass="title" text="Chef Dashboard" />
    
    <TableView fx:id="ordersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="100" />
            <TableColumn fx:id="detailsColumn" text="Details" prefWidth="300" />
            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
        </columns>
    </TableView>

    <Button fx:id="completeButton" text="Complete Order" onAction="#handleCompleteOrder" 
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
</VBox>
